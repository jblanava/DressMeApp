<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VestuarioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="visible"
                tools:visibility="visible">

                <EditText
                    android:id="@+id/editText_busqueda"
                    android:layout_width="0"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Introducir busqueda" />

                <Button
                    android:id="@+id/boton_buscar"
                    android:layout_width="0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Buscar" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/boton_añadir"
                    android:layout_width="0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Añadir" />

                <Button
                    android:id="@+id/boton_agrupar"
                    android:layout_width="0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Agrupar" />

                <Button
                    android:id="@+id/boton_ordenar"
                    android:layout_width="0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Ordenar" />
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="0"
            android:layout_weight="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>